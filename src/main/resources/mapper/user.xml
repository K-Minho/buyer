<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.buyer.model.UserRepository">
   <select id="findAll" resultType="shop.mtcoding.buyer.model.User">
      select * from user_tb order by id desc
   </select>
   
   <select id="findById" resultType="shop.mtcoding.buyer.model.User">
      select * from user_tb where id = #{id}
   </select>

   <insert id="insert"> <!--useGeneratedKey="id" 키값을 지정 지금은 값을 하나씩 넣기때문에 사용하지 않음-->
      insert into user_tb(name, password, email, created_at) values(#{name}, #{password}, #{email}, now()) <!--세미콜론 붙이지 말것-->
   </insert>

    <update id="updatePasswordFindById">
          update user_tb
            password = #{password},
               email = #{email}
         where id = #{id}
    </update>


   <delete id="delete">
      delete from user_tb where id = #{id}
   </delete>

   



</mapper>